            <Label Content="D2" HorizontalAlignment="Left" Height="60" Margin="552,361,0,0" VerticalAlignment="Top" Width="110" FontSize="20"/>
            <Label Content="B2" HorizontalAlignment="Left" Height="60" Margin="187,364,0,0" VerticalAlignment="Top" Width="110" FontSize="20"/>
